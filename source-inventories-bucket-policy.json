{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowSourceStatsDeployerAccess",
            "Effect": "Allow",
            "Principal": {
                "AWS": "arn:aws:iam::417712557820:user/source-stats-deployer"
            },
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject",
                "s3:ListBucket",
                "s3:GetBucketLocation"
            ],
            "Resource": [
                "arn:aws:s3:::source-inventories",
                "arn:aws:s3:::source-inventories/*"
            ]
        },
        {
            "Sid": "AllowSourceStatsLambdaAccess",
            "Effect": "Allow",
            "Principal": {
                "AWS": "arn:aws:iam::417712557820:role/source-stats-lambda-role"
            },
            "Action": [
                "s3:GetObject",
                "s3:PutObject", 
                "s3:DeleteObject",
                "s3:ListBucket",
                "s3:GetBucketLocation"
            ],
            "Resource": [
                "arn:aws:s3:::source-inventories",
                "arn:aws:s3:::source-inventories/*"
            ]
        }
    ]
} 